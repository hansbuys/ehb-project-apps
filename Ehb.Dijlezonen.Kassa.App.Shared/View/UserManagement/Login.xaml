<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ehb.Dijlezonen.Kassa.App.Shared.View.UserManagement.Login">
    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="Center">
        <Image Source="Dijlezonen_Logo.gif" Aspect="AspectFit" Scale="0.8" HeightRequest="300"/>

        <StackLayout HorizontalOptions="Fill"
                     VerticalOptions="Center" Margin="20">
            <Label Text="{Binding Title}"/>
            <Entry Placeholder="{Binding UserPlaceholder}" Text="{Binding User}"/>
            <Entry Placeholder="{Binding PasswordPlaceholder}" Text="{Binding Password}" IsPassword="True"/>
            <Button Text="{Binding LoginCommandText}" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>