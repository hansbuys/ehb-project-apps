<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ehb.Dijlezonen.Kassa.App.Shared.View.UserManagement.PasswordChange">
    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="Center">
        
        <Label Text="{Binding Title}"/>
        
        <Entry Placeholder="{Binding OldPasswordPlaceholder}" Text="{Binding OldPassword}" IsPassword="True"/>
        
        <Entry Placeholder="{Binding NewPasswordPlaceholder}" Text="{Binding NewPassword}" IsPassword="True"/>
        <Entry Placeholder="{Binding ConfirmNewPasswordPlaceholder}" Text="{Binding ConfirmNewPassword}" IsPassword="True"/>
        
        <Button Text="{Binding ChangePasswordCommandText}" Command="{Binding ChangePasswordCommand}"/>
    </StackLayout>
</ContentPage>