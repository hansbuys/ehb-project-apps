<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ehb.Dijlezonen.Kassa.App.Shared.View.MainPage">

    <StackLayout VerticalOptions="Center" 
                 HorizontalOptions="Center">
        <Label Text="{Binding Title}" />
        
        <Button IsVisible="{Binding IsAdmin}" Text="{Binding NavigateToAdminCommandText}" Command="{Binding NavigateToAdminCommand}"></Button>
        
        <Button Text="{Binding LogoutCommandText}" Command="{Binding LogoutCommand}"></Button>
    </StackLayout>

</ContentPage>