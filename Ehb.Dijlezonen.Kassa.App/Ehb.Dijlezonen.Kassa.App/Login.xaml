<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ehb.Dijlezonen.Kassa.App.Shared.Login">
    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="Center">
        <Label Text="{Binding Title}"/>
        <Entry Placeholder="{Binding UserPlaceholder}" Text="{Binding User}"/>
        <Entry Placeholder="{Binding PasswordPlaceholder}" Text="{Binding Password}" IsPassword="True"/>
        <Button Text="{Binding LoginCommandText}" Command="{Binding LoginCommand}"/>
    </StackLayout>
</ContentPage>